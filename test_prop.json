{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Total Crimes in Malaysia by State 2016-2023",
  "projection": { "type": "mercator" },

  "params": [
    {
      "name": "YearSel",
      "bind": {
        "input": "select",
        "options": [null, 2016, 2017, 2018, 2019, 2020, 2021, 2022, 2023],
        "labels": [
          "All years",
          "2016",
          "2017",
          "2018",
          "2019",
          "2020",
          "2021",
          "2022",
          "2023"
        ],
        "name": "Year: "
      }
    },
    {
      "name": "TypeSel",
      "bind": {
        "input": "select",
        "options": [
          null,
          "causing_injury",
          "murder",
          "rape",
          "robbery_gang_armed",
          "robbery_gang_unarmed",
          "robbery_solo_armed",
          "robbery_solo_unarmed",
          "break_in",
          "theft_other",
          "theft_vehicle_lorry",
          "theft_vehicle_motorcar",
          "theft_vehicle_motorcycle"
        ],
        "labels": [
          "All types",
          "causing_injury",
          "murder",
          "rape",
          "robbery_gang_armed",
          "robbery_gang_unarmed",
          "robbery_solo_armed",
          "robbery_solo_unarmed",
          "break_in",
          "theft_other",
          "theft_vehicle_lorry",
          "theft_vehicle_motorcar",
          "theft_vehicle_motorcycle"
        ],
        "name": "Crime type: "
      }
    }
  ],

  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/chokhueyyan/FIT3179/refs/heads/main/malaysia_map.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_admin_1_states_provinces"
        }
      },
      "mark": { "type": "geoshape", "fill": "lightgray", "stroke": "white" }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/chokhueyyan/FIT3179/refs/heads/main/malaysia_map.topojson",
        "format": { "type": "topojson", "feature": "ne_10m_graticules_1" }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "#ccc",
        "strokeDash": [2, 2],
        "fill": null
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/chokhueyyan/FIT3179/refs/heads/main/Crime_Econ.csv"
      },
      "transform": [
        { "filter": "YearSel == null || year(datum.date) == YearSel" },
        { "filter": "TypeSel == null || datum.type == TypeSel" },
        {
          "aggregate": [
            { "op": "sum", "field": "crimes", "as": "total_crimes" },
            {
              "op": "max",
              "field": "total_population",
              "as": "total_population"
            },
            { "op": "max", "field": "total_gdp", "as": "total_gdp" }
          ],
          "groupby": ["state", "district", "lat", "lon"]
        },
        { "calculate": "datum.total_population * 1000", "as": "pop_people" }
      ],
      "mark": {
        "type": "circle",
        "opacity": 0.9,
        "stroke": "white",
        "strokeWidth": 0.3
      },
      "encoding": {
        "longitude": { "field": "lon", "type": "quantitative" },
        "latitude": { "field": "lat", "type": "quantitative" },

        "size": {
          "field": "total_gdp",
          "type": "quantitative",
          "title": "Total GDP",
          "scale": {
            "type": "threshold",
            "domain": [50000, 100000, 200000, 500000],
            "range": [50, 100, 190, 300, 420]
          },
          "legend": { "format": ",", "title": "Total GDP" }
        },

        "color": {
          "field": "total_crimes",
          "type": "quantitative",
          "title": "Total crimes",
          "scale": {
            "type": "threshold",
            "domain": [50, 200, 500, 1000],
            "range": ["#fee5d9", "#fcae91", "#fb6a4a", "#de2d26", "#a50f15"]
          },
          "legend": { "format": ",", "title": "Total crimes" }
        },

        "tooltip": [
          { "field": "state", "title": "State" },
          { "field": "pop_people", "title": "Population", "format": "," },
          { "field": "total_crimes", "title": "Total crimes", "format": "," },
          { "field": "total_gdp", "title": "GDP", "format": "," }
        ]
      }
    }
  ]
}
